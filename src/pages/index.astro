		<!-- <CardsInfo></CardsInfo> -->
		<AboutUs></AboutUs>
		<UsedDevices></UsedDevices>
		<MobileDegree></MobileDegree>
		<BatteryChange></BatteryChange>
		<ContactUs></ContactUs>
		<MobileVariety></MobileVariety>
		<Delivery></Delivery>
		<ContactForm></ContactForm>
		<OurMission></OurMission>
		<Slider lazyLoading={true}></Slider>
		<Footer></Footer>
	</main>
</Layout>