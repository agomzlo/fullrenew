---
import Layout from '@/layouts/Layout.astro';
import Header from '@/sections/Header.astro';
import Hero from '@/sections/Hero.astro';
import Slider from '@/components/Slider.astro';
import OurMission from '@/sections/OurMission.astro';
import Footer from '@/sections/Footer.astro';
// import CardsInfo from '@/sections/CardsInfo.astro';
import AboutUs from '@/sections/AboutUs.astro';
import ContactUs from '@/sections/ContactUs.astro';
import BatteryChange from '@/sections/BatteryChange.astro';
import UsedDevices from '@/sections/UsedDevices.astro';
import ContactForm from '@/sections/ContactForm.astro';
import MobileVariety from '@/sections/MobileVariety.astro';
