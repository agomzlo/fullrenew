---
import LogoFullRenew from "@/icons/LogoFullRenew.astro";
import LogoNSYSTool from "@/icons/LogoNSYSTool.astro";


---
<!-- Edit this section to get every logo element and do the animation from them. When the logo item goes to X -20% move the logo item to X 120% -->
<section class="relative flex-row gap-4 md:gap-8 overflow-hidden whitespace-nowrap w-full py-6 md:py-12 text-secondary after:absolute after:top-0 after:w-52 after:h-full after:z-10 
    after:left-0 after:bg-gradient-to-l after:from-transparent after:to-neutral-900 before:absolute before:top-0 before:w-52 before:h-full before:z-10 
    before:right-0 before:bg-gradient-to-r before:from-transparent before:to-neutral-900">
    <span class="absolute w-auto flex flex-row gap-8">
        <LogoFullRenew class="animate-logo_slide w-[125px]"></LogoFullRenew>
        <LogoNSYSTool class="animate-logo_slide w-[125px]"></LogoNSYSTool>
        <LogoFullRenew class="animate-logo_slide w-[125px]"></LogoFullRenew>
        <LogoNSYSTool class="animate-logo_slide w-[125px]"></LogoNSYSTool>
        <LogoFullRenew class="animate-logo_slide w-[125px]"></LogoFullRenew>
        <LogoNSYSTool class="animate-logo_slide w-[125px]"></LogoNSYSTool>
        <LogoFullRenew class="animate-logo_slide w-[125px]"></LogoFullRenew>
        <LogoNSYSTool class="animate-logo_slide w-[125px]"></LogoNSYSTool>
        <LogoFullRenew class="animate-logo_slide w-[125px]"></LogoFullRenew>
        <LogoNSYSTool class="animate-logo_slide w-[125px]"></LogoNSYSTool>
        <LogoFullRenew class="animate-logo_slide w-[125px]"></LogoFullRenew>
        <LogoNSYSTool class="animate-logo_slide w-[125px]"></LogoNSYSTool>
    </span>
</section>